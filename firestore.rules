rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Match for events collection
    match /events/{eventId} {
      // Allow read for all users (authenticated and unauthenticated)
      allow read: if true; 
      
      // Allow create, update, delete only for authenticated staff users
      allow create, update, delete: if request.auth != null && request.auth.token.role == 'staff';

      // Match for registrations subcollection
      match /registrations/{registrationId} {
        // Allow create for authenticated non-staff users
        allow create: if request.auth != null && request.auth.token.role != 'staff';
        
        // Allow delete for users only if they are the owner of the registration
        allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }
    }

    // Match for users collection
    match /users/{userId} {
      // Allow read and write for authenticated users only for their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Optionally, you can define a match for user registration or login if needed
    match /users/{userId} {
      // Allow create for new user accounts
      allow create: if request.auth == null; // Allow account creation only for unauthenticated users
    }
  }
}
